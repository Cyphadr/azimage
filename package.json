{
  "name": "az-novel-generator",
  "version": "1.0.0",
  "private": true,
  "description": "A-Z novel generator with AI wordlist API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "playwright:install": "npx playwright install chromium",
    "render:health": "node -e \"fetch('http://localhost:8787/api/render-shot/health').then(r=>r.text()).then(console.log).catch(e=>{console.error(e);process.exit(1);})\"",
    "postinstall": "npx playwright install chromium"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "playwright": "^1.58.2"
  }
}
